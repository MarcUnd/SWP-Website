@model LuigiWebsite.Models.user
@{
    ViewData["Title"] = "Resgistration";
}

<h1>Resgistration</h1>

<form asp-controller="user" asp-action="resgistration" method="post">
    <div class="form-group w-50 mx-auto">
        <label asp-for="vorname">Vorname</label>
        <input type="email" class="form-control" placeholder="Luigi" asp-for="vorname" required />

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="nachname">Nachname</label>
        <input type="email" class="form-control" placeholder="Giovinazzi" asp-for="nachname" required />

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="email">Email</label>
        <input type="email" class="form-control" placeholder="luigi.luigi@luigi.luigi" asp-for="email" required />

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="password">Password</label>
        <input type="password" class="form-control" placeholder="12345..." asp-for="password" required />

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="BirthDate">Geburtstag</label>
        <input type="date" class="form-control" placeholder="01.01.1999" asp-for="BirthDate" required />

    </div>
    <div class="btn-group" style="float:right;">
        <a href="/home/index" class="ml-5 btn btn-outline-success">Registrieren</a>
    </div>
</form>

