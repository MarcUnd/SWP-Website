@model LuigiWebsite.Models.user 

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-controller="customer" asp-action="login" method="post">
    <div class="form-group w-50 mx-auto">
        <label asp-for="email">Email</label>
        <input asp-for="email" type="email" name="email" class="form-control" placeholder="luigi.luigi@luigi.luigi" required />


    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="password">Password</label>
        <input asp-for="password" type="password" name="password" class="form-control" placeholder="12345..." required />

    </div>
    <div class="btn-group" style="float:right;">
        <button type="submit" value="login" class="ml-5 btn btn-outline-success">Anmelden</button>
        <a href="/customer/registration" class="mr-5 btn btn-outline-info">Registrieren</a>
    </div>
    
</form>
