@model LuigiWebsite.Models.reservation

@{
    ViewData["Title"] = "Reservation";
}

<h1>Reservation</h1>

<form asp-controller="customer" asp-action="reservation" method="post">
    <div class="form-group w-50 mx-auto">
        <label asp-for="nachname">Nachname</label>
        <input type="text" class="form-control" placeholder="Giovinazzi" asp-for="nachname" required />
        <span asp-validation-for="nachname"></span>

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="email">Email</label>
        <input type="email" class="form-control" placeholder="luigi.luigi@luigi.luigi" asp-for="email" required />
        <span asp-validation-for="email"></span>

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="number">Telefonnummer</label>
        <input type="tel" class="form-control" placeholder="+43 650 5201956" asp-for="number" pattern="[+]{1}[0-9]{2} [0-9]{3} [0-9]{7}|[0-9]{4} [0-9]{7}|[+]{1}[0-9]{2}[0-9]{3}[0-9]{7}|[0-9]{4}[0-9]{7}" required />
        <span asp-validation-for="number"></span>

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="uhrzeit">Datum</label>
        <input type="time" class="form-control" asp-for="uhrzeit" required />
        <span asp-validation-for="uhrzeit"></span>

        <label asp-for="date">Datum</label>
        <input type="date" class="form-control" asp-for="date" required />
        <span asp-validation-for="date"></span>

    </div>
    <div class="btn-group" style="margin: 0px 40px 40px 0px; float:right; ">
        <button type="submit" class="ml-5 btn btn-outline-success">Reservieren</button>
    </div>
</form>




