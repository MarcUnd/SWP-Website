@model LuigiWebsite.Models.user
@{
    ViewData["Title"] = "Reservation";
}

<h1>Reservation</h1>

<form asp-controller="user" asp-action="resgistration" method="post">
    <div class="form-group w-50 mx-auto">
        <label asp-for="nachname">Nachname</label>
        <input type="text" class="form-control" placeholder="Giovinazzi" asp-for="nachname" required />
        <span asp-validation-for="nachname"></span>

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="email">Email</label>
        <input type="email" class="form-control" placeholder="luigi.luigi@luigi.luigi" asp-for="email" required />
        <span asp-validation-for="email"></span>

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="number">Telefonnummer</label>
        <input type="number" class="form-control" placeholder="0000 0000000" asp-for="number" required />
        <span asp-validation-for="number"></span>

    </div>
    <div class="form-group w-50 mx-auto">
        <label asp-for="date">Datum</label>
        <input type="datetime" class="form-control" placeholder="01.01.1999" asp-for="date" required />
        <span asp-validation-for="date"></span>

    </div>
    <div class="btn-group " style="background-color:aqua">
        <button type="submit" class="btn" style="background-color:aquamarine">Registrieren</button>
    </div>
</form>
